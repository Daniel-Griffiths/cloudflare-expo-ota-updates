{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@cloudflare-expo-ota/worker": ["apps/worker/src/index.ts"],
      "@cloudflare-expo-ota/deploy": ["packages/easc/index.ts"]
    }
  },
  "include": [],
  "exclude": ["node_modules"],
  "references": [
    { "path": "./apps/worker/tsconfig.json" },
    { "path": "./packages/easc/tsconfig.json" }
  ]
}
